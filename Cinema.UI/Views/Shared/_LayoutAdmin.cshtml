
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Cinema.UI</title>
    <link href="~/twitter-bootstrap/css/bootstrap.css" type="text/css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" />
    <style type="text/css">
        body {
            background-image:url('@Url.Content("~/img/abstract-stock-photos-with-arrows-1163417.jpg")');
            background-size:cover;

        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid" style="background-color:azure">
               <h1>Sinema Günlerim</h1>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">

                        <li class="nav-item" style="margin-left:auto">
                            <a class="nav-link text-dark" asp-controller="Home" asp-action="AdminIndex">Anasayfa</a>
                        </li>
                        <li class="nav-item" style="margin-left:auto">
                            <a class="nav-link text-dark" asp-controller="Category" asp-action="Index">Kategori</a>
                        </li>
                        <li class="nav-item" style="margin-left:auto">
                            <a class="nav-link text-dark" asp-controller="Movie" asp-action="Index">Film</a>
                        </li>
                        <li class="nav-item" style="margin-left:auto">
                            <a class="nav-link text-dark" asp-controller="Reservation" asp-action="Index"><mark>Rezervasyon</mark></a>
                        </li>
                        <li class="nav-item" style="margin-left:auto">
                            <a class="nav-link text-dark" asp-controller="Room" asp-action="Index">Oda</a>
                        </li>
                        <li class="nav-item" style="margin-left:auto">
                            <a class="nav-link text-dark" asp-controller="Seat" asp-action="Index">Koltuk</a>
                        </li>

                        <li class="nav-item" style="margin-left:auto">
                            <a class="nav-link text-dark" asp-controller="Account" asp-action="LogOut">Çıkış</a>
                        </li>
                        <li style="margin-left:auto"><a href="#"> @User.Identity.Name.ToUpper()</a></li>
                    </ul>
                </div>
            </div>
        </nav>

    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
            <br />
            <br />
        </main>
    </div>

    <footer class="border-top footer text-muted" style="">
        <div class="container">
            &copy; 2022 - Sinema Günlerim- <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
