@model IEnumerable<Cinema.Entities.Concrete.Employee>

@{
    ViewData["Title"] = "Index";
}

<h1>Çalışanlar</h1>

@*<p>
    <a asp-action="Create">Yeni Çalışan Oluştur</a>
</p>*@
<table class="table">
    <thead>
        <tr>
            <th>
                Departman
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Adress)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Department.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Adress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.ActionLink("Güncelle", "Update", new { id=item.AppIdentityUserId }) |
                @Html.ActionLink("Detaylar", "Details", new { id = item.AppIdentityUserId }) |
                @Html.ActionLink("Sil", "Delete", new { id = item.AppIdentityUserId })
            </td>
        </tr>
}
    </tbody>
</table>