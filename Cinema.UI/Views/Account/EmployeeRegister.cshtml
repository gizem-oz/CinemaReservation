@using Cinema.Entities.Concrete;
@{Layout = "~/Views/Shared/_Layout.cshtml";

    List<Department> departments = ViewBag.Departments as List<Department> ;
    }

<div class="container" style="margin-top: 5.4%;">
    <div class="row">
        <div class="col-sm-4"> </div>
        <div class="col-md-4">

            <h1 class="text-center text-success">Personel Üyeliği</h1>
            <br />

            <div class="col-sm-12">

                <form method="post" asp-action="EmployeeRegister" asp-controller="Account">

                    <div class="form-group">
                        <label for="FirstName">Ad</label>
                        <input name="FirstName" type="text" class="form-control" id="email">
                    </div>
                    <div class="form-group">
                        <label for="LastName">Soyad</label>
                        <input name="LastName" type="text" class="form-control" id="email">
                    </div>
                    <div class="form-group">
                        <label for="PhoneNumber">Telefon Numarası</label>
                        <input name="PhoneNumber" type="text" placeholder="0xxx xxx xx xx" class="form-control" id="email">
                    </div>
                    <div class="form-group">
                        <label for="Adress">Adres</label>
                        <input name="Adress" type="text" class="form-control" id="email">
                    </div>
                    <div class="form-group">
                        <label for="DepartmentId">Departman Adı</label>
                        <select class="form-control" name="DepartmentId">
                            @foreach (var item in departments)
                            {
                                <option value="@item.Id">@item.Name</option>
                            }
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="UserName">Kullanıcı Adı</label>
                        <input name="UserName" type="text" class="form-control" id="pwd">
                    </div>

                    <div class="form-group">
                        <label for="email">E-Posta Adresi</label>
                        <input name="Email" type="email" class="form-control" id="email">
                    </div>

                    <div class="form-group">
                        <label for="pwd">Parola</label>
                        <input name="Password" type="password" class="form-control" id="pwd">
                    </div>

                    <div class="form-group">
                        <label for="pwd">Parola Tekrarı</label>
                        <input name="ConfirmPassword" type="password" class="form-control" id="pwd">
                    </div>

                    <div class="row mt-2">
                        <div class="col-12">
                            <button type="submit" class="btn btn-primary w-100">Üye Ol</button>
                        </div>
                    </div>


                </form>
                <div class="row mt-2">
                    <div class="col-12 text-center">
                        <a class="btn text-primary" asp-action="Login" asp-controller="Account">Giriş sayfasına yönlendir.</a>

                    </div>
                </div>
                <hr />
            </div>
        </div>
    </div>
</div>
